{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "TextBlock",
      "text": "Create a new job posting",
      "weight": "bolder",
      "size": "medium"
    },
    {
      "type": "TextBlock",
      "text": "Enter in basic information about this posting",
      "isSubtle": true,
      "wrap": true,
      "size": "small"
    },
    {
      "type": "TextBlock",
      "text": "Title",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "jobTitle",
      "placeholder": "E.g. Senior PM"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": 2,
          "items": [
            {
              "type": "TextBlock",
              "text": "Level",
              "wrap": true
            },
            {
              "type": "Input.Number",
              "placeholder": "Level",
              "min": 7,
              "max": 10,
              "value": 7,
              "id": "jobLevel"
            }
          ]
        },
        {
          "type": "Column",
          "width": 2,
          "items": [
            {
              "type": "TextBlock",
              "text": "Location"
            },
            {
              "type": "Input.ChoiceSet",
              "id": "jobLocation",
              "style": "compact",
              "value": "1",
              "width":  "stretch",
              "choices": [
                {
                  "title": "San Francisco",
                  "value": "1"
                },
                {
                  "title": "London",
                  "value": "2"
                },
                {
                  "title": "Singapore",
                  "value": "3"
                },
                {
                  "title": "Dubai",
                  "value": "3"
                },
                {
                  "title": "Frankfurt",
                  "value": "3"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Create posting",
      "data": {
        "command": "createPosting"
      }
    },
    {
      "type": "Action.Submit",
      "title": "Cancel"
    },
    {
      "type": "Action.Submit",
      "title": "Open form",
      "data": {
        "command": "createPostingExtended",
        "commandId": "createPostingExtended",
        "msteams": {
          "type": "task/fetch"
        }
      }
    }
  ]
}